# Blockchain-Konfiguration für ASI-System
# Kopiere diese Datei als .env und fülle die Werte aus

# Polygon Mumbai Testnet (für Entwicklung)
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com/
POLYGON_RPC_URL=https://polygon-rpc.com/

# Private Key (OHNE 0x Prefix)
# ACHTUNG: NIE in Versionskontrolle speichern!
PRIVATE_KEY=your_private_key_here

# ASI Smart Contract Adresse (wird nach Deployment gesetzt)
ASI_CONTRACT_ADDRESS=0x...

# PolygonScan API Key für Contract-Verifizierung (optional)
POLYGONSCAN_API_KEY=your_api_key_here

# Blockchain-Features aktivieren/deaktivieren
ENABLE_BLOCKCHAIN=true
AUTO_REGISTER_ON_CHAIN=false
BLOCKCHAIN_NETWORK=mumbai

# Flask/Web Security & Server Settings
# Secret Key für Flask-Sessions (in Produktion setzen!)
ASI_SECRET_KEY=please_change_me

# Web-App (src/web/app.py)
ASI_DEBUG=true
ASI_HOST=0.0.0.0
ASI_PORT=8000
ASI_COOKIE_SECURE=false

# API-Server (api_server.py)
ASI_API_DEBUG=true
ASI_API_HOST=0.0.0.0
ASI_API_PORT=5000

# Main Flask Entry (main.py serve)
ASI_MAIN_DEBUG=true
ASI_MAIN_HOST=0.0.0.0
ASI_MAIN_PORT=5000
